<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="950dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/unsplash_aq" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:src="@drawable/kallos_logo_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvJudulSC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai jadikan olahraga
sebagai rutinitasmu"
        android:textColor="@color/white"
        android:fontFamily="@font/popping_bold"
        android:textSize="12pt"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="35dp"
        />

    <TextView
        android:id="@+id/tvSubJudulSC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tingkatkan energi dan kesehatanmu"
        android:textColor="@color/white"
        android:fontFamily="@font/regular_poppins"
        android:textSize="6pt"
        android:layout_marginBottom="150dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudulSC1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMulai"
        android:textColor="@color/white"
        android:fontFamily="@font/semi_bold_poppins"
        android:textAllCaps="false"
        android:text="Mulai"
        android:textSize="16dp"
        android:layout_marginBottom="45dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_orange_button"/>






</androidx.constraintlayout.widget.ConstraintLayout>