<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailWorkout">

    <TextView
        android:id="@+id/tvNamaWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini halaman detail workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/rounded_corner_8dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/regular_poppins"
        android:paddingTop="6dp"
        android:text="gerakan"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kembali"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/rounded_orange_button"
        android:fontFamily="@font/semi_bold_poppins"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="Kembali"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_lanjut"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/rounded_orange_button"
        android:fontFamily="@font/semi_bold_poppins"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="Lanjut"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPanduanGerakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_lanjut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Panduan Gerakan"
        android:textColor="@color/orange"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>